-- Criei esse Hub pra uso pessoal(Erickzzssx)
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

-- Aviso ao notificar
Fluent:Notify({ Title = "Notificação", Content = "Script Executado" })

-- Criação da janela principal
local Window = Fluent:CreateWindow({
    Title = "Aimbot Erickzzssx" .. Fluent.Version,
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Theme = "Dark"
})

-- Abas
local Tabs = {
    Main = Window:AddTab({ Title = "Aimbot" }),
    Credits = Window:AddTab({ Title = "Credits" })
}

-- Adicionando conteúdo nas abas
Tabs.Main:AddParagraph({ Title = "Scripts", Content = "Aimbot abaixo!" })
Tabs.Credits:AddParagraph({ Title = "TikTok", Content = "Ericksszzx" })

local StarterGui = game:GetService("StarterGui")

local Button = Tabs.Main:AddButton({
    Title = "Blade Ball (Outra Versão)",
    Callback = function()
        StarterGui:SetCore("SendNotification", {
            Title = "Executado!",
            Text = "Script 'Blade Ball' foi ativado.",
            Duration = 3
        })
        
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Efe0626/RaitoHub/main/Script"))()
    end
})

-- Alternador (Toggle)
local Toggle = Tabs.Main:AddToggle("Aimbot Erickzzssx", { Title = "Aimbot Erickzzssx" })

Toggle:OnChanged(function(Value)
    print("Aimbot Erickzzssx está:", Value and "Ativado" or "Desativado")
    
    -- Verifica se o toggle foi ativado
    if Value then
        -- Ativa o script se o toggle for ativado
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Erickzzssx/Aimbot-Erickzzssx/refs/heads/main/Erickzzssx%20Aimbot"))()
    else
        -- Desativa o script ou faz o que for necessário quando o toggle for desmarcado
        -- Aqui você pode adicionar o código para parar o script, se necessário
    end
end)
